[library]
version = "@VERSION@"
description = "Phone Compositor"
authors = "The Phosh Developers"
license = "GPL-3.0-or-later"
browse_url = "https://gitlab.gnome.org/World/Phosh/phoc/"
repository_url = "https://gitlab.gnome.org/World/Phosh/phoc.git"
website_url = "https://world.pages.gitlab.gnome.org/Phosh/phoc"
devhelp = true
search_index = true

related = ["GLib-2.0", "GObject-2.0", "Gio-2.0", "wlroots"]

  [related."wlroots"]
  name = "wlroots"
  description = "Modular Wayland compositor library"
  docs_url = "https://gitlab.freedesktop.org/wlroots/wlroots/"

  [related."GLib-2.0"]
  name = "GLib"
  description = "General-purpose, portable utility library"
  docs_url = "https://docs.gtk.org/glib/"

  [related."GObject-2.0"]
  name = "GObject"
  description = "The base type system library"
  docs_url = "https://docs.gtk.org/gobject/"

  [related."Gio-2.0"]
  name = "GIO"
  description = "GObject Interfaces and Objects, Networking, IPC, and I/O"
  docs_url = "https://docs.gtk.org/gio/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
# The base URL for the web UI
base_url = "https://gitlab.gnome.org/World/Phosh/phoc/-/tree/main"
# The format for links, using "filename" and "line" for the format
file_format = "{filename}#L{line}"

[extra]
content_files = [
  "@CONTENT_FILES@",
]

